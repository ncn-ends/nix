autocmd FileType yaml setlocal shiftwidth=2 softtabstop=2 expandtab
set tabstop=2
set shiftwidth=2
set expandtab
set textwidth=79
set autoindent
set showmatch

set mouse=a
syntax on
set relativenumber

set cursorline
:highlight Cursorline cterm=bold ctermbg=Black

" search highlight and smart search "
set hlsearch
:nohls
set ignorecase
set smartcase

" true color support "
" set termguicolors "
